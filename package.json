{
  "name": "stellariscloud",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/shared/packages/*"
  ],
  "scripts": {
    "install:clean": "rm -rf ./node_modules || true && rm -rf ./packages/api/node_modules || true && rm -rf ./packages/stellariscloud-ui/node_modules || true && rm bun.lockb || true && bun install",
    "prettier:check": "prettier --check \"./**/*.(ts|tsx)\"",
    "prettier:write": "prettier --write \"./**/*.(ts|tsx)\"",
    "deploy:local-platform-worker": "(cd ./deploy && sh ./deploy-local-platform-worker.sh)",
    "deploy:dev-platform-api": "(cd ./deploy && sh ./deploy-dev-platform-api.sh)",
    "deploy:prod-platform-api": "(cd ./deploy && sh ./deploy-prod-platform-api.sh)",
    "deploy:local-platform-api": "(cd ./deploy && sh ./deploy-local-platform-api.sh)",
    "api-client:generate": "bun --cwd packages/api api-client:generate",
    "dev:docker:clean": "(rm -rf ./.docker/postgres/* || true) && (rm -rf ./.docker/minio || true)",
    "dev:docker:api:build": "docker compose --env-file \"./packages/api/.env\" up api --build",
    "dev:docker:api": "docker compose --env-file \"./packages/api/.env\" up api",
    "dev:docker:services": "docker compose --env-file \"./packages/api/.env\" up db",
    "dev:docker:down": "docker compose --env-file \"./packages/api/.env\" down",
    "dev:docker:api:kill": "docker compose --env-file \"./packages/api/.env\" kill api",
    "dev:docker:api:down": "docker compose --env-file \"./packages/api/.env\" down api",
    "dev:docker:kill": "docker compose --env-file \"./packages/api/.env\" kill",
    "dev:check-all": "sh ./cmd/dev-check-all.sh",
    "ui:dev": "bun --cwd packages/stellariscloud-ui dev",
    "services:dev": "bun --cwd packages/api dev:docker:services",
    "api:dev": "bun --cwd packages/api dev:docker:api"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-ts": "2.12.1",
    "@typescript-eslint/eslint-plugin": "8.19.1",
    "@typescript-eslint/parser": "8.19.1",
    "eslint": "9.17.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-node": "0.3.9",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-regexp": "2.7.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-sonarjs": "3.0.1",
    "prettier": "3.3.2"
  }
}
