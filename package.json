{
  "name": "stellariscloud",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/shared/packages/*"
  ],
  "scripts": {
    "prettier:check": "prettier --check \"./**/*.(ts|tsx)\"",
    "prettier:write": "prettier --write \"./**/*.(ts|tsx)\"",
    "deploy:local-platform-worker": "(cd ./deploy && sh ./deploy-local-platform-worker.sh)",
    "deploy:dev-platform-api": "(cd ./deploy && sh ./deploy-dev-platform-api.sh)",
    "deploy:prod-platform-api": "(cd ./deploy && sh ./deploy-prod-platform-api.sh)",
    "deploy:local-platform-api": "(cd ./deploy && sh ./deploy-local-platform-api.sh)",
    "generate:api-client": "bun --cwd packages/api api-client:generate",
    "dev:docker:clean": "(rm -rf ./.docker/postgres/* || true) && (rm -rf ./.docker/redis/* || true) && (rm -rf ./.docker/minio || true)",
    "dev:docker:api:build": "docker compose --env-file \"./packages/api/.env\" up api --build",
    "dev:docker:api": "docker compose --env-file \"./packages/api/.env\" up api",
    "dev:docker:services": "docker compose --env-file \"./packages/api/.env\" up db redis swagger",
    "dev:docker:down": "docker compose down",
    "dev:docker:kill": "docker compose kill",
    "dev:check-all": "sh ./cmd/dev-check-all.sh",
    "api:dev": "bun --cwd packages/api dev"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.4.0",
    "@typescript-eslint/parser": "6.4.0",
    "eslint": "8.47.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-node": "0.3.9",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-jest": "27.2.3",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-regexp": "1.15.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-sonarjs": "0.20.0",
    "prettier": "3.2.5",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0"
  },
  "engines": {
    "node": "18"
  },
  "packageManager": "yarn@4.1.0"
}
