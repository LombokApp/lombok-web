{
  "name": "@lombokapp/core-worker-utils",
  "private": true,
  "scripts": {
    "build": "rm -rf ./dist && NODE_ENV=production bun --bun script/build.ts",
    "build:clean": "bun clean && bun run build",
    "clean": "rm -rf ./dist",
    "lint:check": "eslint",
    "lint:fix": "eslint --fix",
    "tsc:check": "tsc --noEmit",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test:unit": "bun test",
    "dev:docker:unit:run": "docker compose -f ../../docker-compose.test.yml up coreworkerunittest"
  },
  "devDependencies": {
    "@lombokapp/types": "workspace:*",
    "@types/fluent-ffmpeg": "2.1.27",
    "prettier": "3.4.2"
  },
  "dependencies": {
    "@lombokapp/utils": "workspace:*",
    "fluent-ffmpeg": "2.1.3",
    "sharp": "0.34.3",
    "uuid": "^10.0.0"
  }
}

