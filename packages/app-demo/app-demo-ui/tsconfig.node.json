{
  "compilerOptions": {
    "skipLibCheck": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@lombokapp/types": ["../../types/src"],
      "@lombokapp/types/*": ["../../types/src/*"],
      "@lombokapp/utils": ["../../utils/src"],
      "@lombokapp/utils/*": ["../../utils/src/*"]
    }
  },
  "include": ["vite.config.ts", "eslint.config.ts"]
}
