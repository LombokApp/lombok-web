{
  "compilerOptions": {
    "target": "ES2020",
    "types": ["bun"],
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"],
      "@/utils/*": ["../ui-toolkit/src/utils/*"],
      "@/components/*": ["../ui-toolkit/src/components/*"],
      "@lombokapp/app-worker-sdk": ["../../app-worker-sdk/src"],
      "@lombokapp/app-worker-sdk/*": ["../../app-worker-sdk/src/*"],
      "@lombokapp/types": ["../../types/src"],
      "@lombokapp/types/*": ["../../types/src/*"],
      "@lombokapp/utils": ["../../utils/src"],
      "@lombokapp/utils/*": ["../../utils/src/*"]
    }
  },
  "include": ["src", "vite.config.ts", "eslint.config.ts"]
}
