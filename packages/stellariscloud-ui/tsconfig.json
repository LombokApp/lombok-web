{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "rootDir": ".",
    "incremental": true,
    "noEmit": false,
    "outDir": "dist",
    "paths": {
      "@/utils": ["../ui-toolkit/src/utils"],
      "@/components": ["../ui-toolkit/src/components"],
      "@/components/*": ["../ui-toolkit/src/components/*"]
    }
  },

  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "./worker.ts",
    ".eslintrc.js",
    "postcss.config.mjs",
    "lint-staged.config.js",
    "tailwind.config.ts",
    "next.config.mjs"
  ],
  "exclude": []
}
