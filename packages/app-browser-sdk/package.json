{
  "name": "@lombokapp/app-browser-sdk",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    "default": "./index.ts"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --format esm --external @lombokapp/sdk --external @lombokapp/types --external @lombokapp/auth-utils",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:clean": "rm -rf dist && bun run build && bun run build:types",
    "dev": "bun --watch src/index.ts",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "tsc:check": "tsc --noEmit",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "dependencies": {
    "@lombokapp/sdk": "workspace:*",
    "@lombokapp/types": "workspace:*",
    "@lombokapp/auth-utils": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
