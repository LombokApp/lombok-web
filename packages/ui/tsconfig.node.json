{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023", "WebWorker"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "paths": {
      "@/utils": ["../ui-toolkit/src/utils"],
      "@/components": ["../ui-toolkit/src/components"],
      "@/components/*": ["../ui-toolkit/src/components/*"]
    }

  },
  "include": ["vite.config.ts", "tailwind.config.ts", "postcss.config.ts", "eslint.config.ts", "index.d.ts"]
}
