{
  "compilerOptions": {
    "module": "ESNext", // Rollup prefers ES module syntax
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": [
    ".",
    "src",
    "index.ts",
    "index.d.ts",
    "eslint.config.js",
    "rollup.config.js"
  ],
  "exclude": ["dist"]
}
