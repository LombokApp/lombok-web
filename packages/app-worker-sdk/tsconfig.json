{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["bun"],
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@lombokapp/types": ["../types/src"],
      "@lombokapp/types/*": ["../types/src/*"],
      "@lombokapp/utils": ["../utils/src"],
      "@lombokapp/utils/*": ["../utils/src/*"]
    },
    "noUncheckedIndexedAccess": true
  },
  "include": [".", "src", "index.ts", "index.d.ts", "eslint.config.ts"],
  "exclude": ["dist"]
}
