{
  "name": "@stellariscloud/ui-toolkit",
  "version": "0.0.1",
  "main": "dist/index.js",
  "description": "The Stellaris Cloud UI Toolkit",
  "author": "Stellaris Cloud",
  "repository": "git@github.com:stellariscloud/ui-toolkit.git",
  "scripts": {
    "test": "tsc --project tsconfig.json",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "generate:component": "plop component",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pre-commit": "pretty-quick --staged",
    "prettier": "prettier --write .",
    "prepare": "husky",
    "postinstall": "bun run prepare"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.9.0",
    "@eslint/js": "^9.11.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@storybook/addon-essentials": "^8.3.4",
    "@storybook/addon-interactions": "^8.3.4",
    "@storybook/addon-links": "^8.3.4",
    "@storybook/addon-onboarding": "^8.3.4",
    "@storybook/addon-styling-webpack": "^1.0.0",
    "@storybook/addon-themes": "^8.3.4",
    "@storybook/addon-webpack5-compiler-swc": "^1.0.5",
    "@storybook/blocks": "^8.3.4",
    "@storybook/react": "^8.3.4",
    "@storybook/react-webpack5": "^8.3.4",
    "@storybook/test": "^8.3.4",
    "@types/eslint__js": "^8.42.3",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.11.1",
    "husky": "^9.1.6",
    "plop": "^4.0.1",
    "postcss": "^8.4.47",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "pretty-quick": "^4.0.0",
    "storybook": "^8.3.4",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "tscpaths": "^0.0.9",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.0"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-alert-dialog": "^1.1.2",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
