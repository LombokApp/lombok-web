{
  "compilerOptions": {
    "module": "ESNext",
    "types": ["bun"],
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": [".", "src", "index.ts", "index.d.ts", "eslint.config.ts"],
  "exclude": ["dist"]
}
