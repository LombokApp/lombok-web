{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["bun"],
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@lombokapp/types": ["../types/src"],
      "@lombokapp/types/*": ["../types/src/*"],
      "@lombokapp/auth-utils": ["../auth-utils/src"],
      "@lombokapp/auth-utils/*": ["../auth-utils/src/*"]
    }
  },
  "include": [".", "src", "index.ts", "index.d.ts", "eslint.config.ts"],
  "exclude": ["dist"]
}
