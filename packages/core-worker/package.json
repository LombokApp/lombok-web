{
  "name": "@lombokapp/core-worker",
  "private": true,
  "scripts": {
    "build": "rm -rf ./dist && NODE_ENV=production bun --bun script/build.ts",
    "build:clean": "bun clean && bun run build",
    "clean": "rm -rf ./dist",
    "lint:check": "eslint",
    "lint:fix": "eslint --fix",
    "tsc:check": "tsc --noEmit",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test:e2e": "bun install && bun test $(find src -type f -name '*.e2e-spec.ts' | sed 's|^|./|')",
    "test:unit": "bun test",
    "dev:docker:unit:run": "docker compose -f ../../docker-compose.test.yml up coreworkerunittest",
    "dev:docker:e2e:run": "docker compose -f ../../docker-compose.test.yml up coreworkere2etest"
  },
  "devDependencies": {
    "@lombokapp/types": "workspace:*",
    "@types/fluent-ffmpeg": "2.1.27",
    "prettier": "3.4.2"
  },
  "dependencies": {
    "@lombokapp/utils": "workspace:*",
    "@lombokapp/app-worker-sdk": "workspace:*",
    "fluent-ffmpeg": "2.1.3",
    "sharp": "0.34.3",
    "socket.io-client": "4.8.1",
    "zod": "3.25.76"
  }
}
