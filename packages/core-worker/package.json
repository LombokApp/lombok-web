{
  "name": "@lombokapp/core-worker",
  "private": true,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    },
    "./core-app-worker": {
      "types": "./dist/core-app-worker.d.ts",
      "import": "./dist/core-app-worker.mjs",
      "default": "./dist/core-app-worker.mjs"
    }
  },
  "scripts": {
    "build": "rm -rf ./dist && NODE_ENV=production tsup index.ts core-app-worker.ts --format esm --dts --external bun && cp -r ./src/worker-scripts/worker-daemon ./dist/",
    "lint:check": "eslint",
    "lint:fix": "eslint --fix",
    "tsc:check": "tsc --noEmit",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "test:e2e": "bun install && bun test $(find src -type f -name '*.e2e-spec.ts' | sed 's|^|./|')",
    "test:unit": "bun test",
    "dev:docker:unit:run": "docker compose -f ../../docker-compose.test.yml up coreworkerunittest",
    "dev:docker:e2e:run": "docker compose -f ../../docker-compose.test.yml up coreworkere2etest"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "eslint": "catalog:",
    "@eslint/js": "catalog:",
    "jiti": "catalog:",
    "typescript-eslint": "catalog:",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@stylistic/eslint-plugin": "catalog:",
    "eslint-plugin-import": "catalog:",
    "eslint-plugin-eslint-comments": "catalog:",
    "eslint-plugin-promise": "catalog:",
    "eslint-plugin-simple-import-sort": "catalog:",
    "eslint-plugin-prettier": "catalog:",
    "globals": "catalog:",
    "socket.io": "catalog:",
    "openapi-fetch": "catalog:",
    "prettier": "catalog:",
    "uuid": "catalog:",
    "tsup": "catalog:"
  },
  "dependencies": {
    "@lombokapp/types": "workspace:*",
    "@lombokapp/utils": "workspace:*",
    "@lombokapp/app-worker-sdk": "workspace:*",
    "@lombokapp/core-worker-utils": "workspace:*",
    "socket.io-client": "catalog:",
    "zod": "catalog:"
  }
}
