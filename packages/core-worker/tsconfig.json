{
  "compilerOptions": {
    "types": ["bun"],
    "strict": true,
    "module": "es2022",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2022",
    "outDir": "dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "@lombokapp/core-worker-utils": ["../core-worker-utils/src"],
      "@lombokapp/core-worker-utils/*": ["../core-worker-utils/src/*"],
      "@lombokapp/types": ["../types/src"],
      "@lombokapp/types/*": ["../types/src/*"],
      "@lombokapp/utils": ["../utils/src"],
      "@lombokapp/utils/*": ["../utils/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "index.ts",
    "script/**/*.ts",
    "core-app-worker.ts",
    "eslint.config.ts"
  ],
  "exclude": ["dist"]
}
