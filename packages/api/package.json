{
  "name": "@lombokapp/api",
  "private": true,
  "scripts": {
    "start": "bun dist/src/main.js",
    "dev": "bun --watch src/main.ts",
    "build": "rm -rf ./dist && NODE_ENV=production bun run script/build.ts",
    "test:unit:watch": "bun test $(find src -type f -name '*.unit-spec.ts' | sed 's|^|./|') --watch",
    "test:unit": "bun test $(find src -type f -name '*.unit-spec.ts' | sed 's|^|./|')",
    "reset:sdk": "(rm -rf ./node_modules/@lombokapp/app-worker-sdk || true)",
    "lint:check": "eslint",
    "lint:fix": "eslint --fix",
    "tsc:check": "tsc --noEmit",
    "db:migrate:new": "bun drizzle-kit generate --config ./src/orm/drizzle.config.ts",
    "db:migrate:up": "bun ./script/db-migrate-up.ts",
    "db:migrate:check": "./cmd/db-migrate-check.sh",
    "db:migrate:drop": "./cmd/db-migrate-drop.sh",
    "db:clean:docker": "bun ./script/db-reset.ts && bun db:migrate:up && bun db:seed",
    "db:reset:docker": "bun ./script/db-reset.ts",
    "db:reset": "docker exec -it lombok-api bun --cwd ./packages/api db:reset:docker",
    "db:clean": "docker exec -it lombok-api bun --cwd ./packages/api db:clean:docker",
    "db:seed": "./cmd/db-seed.sh",
    "db:migrate:up:docker": "docker exec -it lombok-api bun --cwd ./packages/api db:migrate:up",
    "db:migrate:reset": "rm -rf ./src/orm/migrations/* && bun db:migrate:new",
    "db:seed:docker": "docker exec -it lombok-api bun --cwd ./packages/api db:seed",
    "db:reset:dev": "bun db:reset:docker && bun db:seed:docker",
    "dev:docker:api": "docker compose --env-file \"./.env\" up api",
    "dev:docker:api:build": "docker compose --env-file \"./.env\" up api --build",
    "dev:docker:db": "docker compose --env-file \"./.env\" up db",
    "dev:docker:minio": "docker compose --env-file \"./.env\" up minio minioclient",
    "dev:docker:minio:down": "docker compose --env-file \"./.env\" down minio",
    "dev:docker:install": "docker exec -it lombok-api bun install",
    "dev:docker:e2e:services": "bun dev:docker:e2e:down && docker compose -f ../../docker-compose.test.yml --env-file \"./.env.test\" up -d dbtest miniotest minioclienttest",
    "dev:docker:e2e:down": "docker compose -f ../../docker-compose.test.yml --env-file \"./.env.test\" down",
    "dev:docker:e2e:watch": "docker compose -f ../../docker-compose.test.yml --env-file \"./.env.test\" up apitestwatch",
    "dev:docker:e2e:run": "docker compose -f ../../docker-compose.test.yml --env-file \"./.env.test\" run --rm apitest --",
    "dev:restart:docker": "bun ./script/dev-restart.ts",
    "dev:enableapps:docker": "bun ./script/dev-enable-apps.ts",
    "dev:enableapps": "docker exec -it lombok-api bun --cwd packages/api dev:enableapps:docker",
    "dev:restart": "docker exec -it lombok-api bun --cwd packages/api dev:restart:docker",
    "dev:restart:clean": "docker exec -it lombok-api bun --cwd packages/api dev:restart:clean:docker",
    "dev:restart:clean:docker": "bun db:clean:docker && bun dev:restart:docker",
    "metadata:generate": "bun script/generate-metadata.ts",
    "generate:openapi": "bun metadata:generate && ./cmd/generate-openapi-spec.sh",
    "prettier:check": "prettier --check \"./**/*.(ts|tsx)\"",
    "prettier:write": "prettier --write \"./**/*.(ts|tsx)\""
  },
  "dependencies": {
    "@anatine/zod-nestjs": "2.0.9",
    "@anatine/zod-openapi": "2.2.8",
    "@aws-sdk/client-s3": "3.723.0",
    "@heyputer/kv.js": "0.2.1",
    "@lombokapp/core-worker": "workspace:*",
    "@lombokapp/worker-utils": "workspace:*",
    "@lombokapp/types": "workspace:*",
    "@lombokapp/utils": "workspace:*",
    "@nestjs/common": "11.1.12",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.12",
    "@nestjs/jwt": "11.0.2",
    "@nestjs/platform-express": "11.1.12",
    "@nestjs/platform-socket.io": "11.1.12",
    "@nestjs/swagger": "11.2.5",
    "@nestjs/websockets": "11.1.12",
    "aws4": "1.13.2",
    "cron": "4.4.0",
    "dockerode": "catalog:",
    "drizzle-orm": "catalog:",
    "express": "4.21.2",
    "i18next": "24.2.1",
    "jexpr": "catalog:",
    "jsonwebtoken": "9.0.2",
    "mime": "catalog:",
    "openapi-fetch": "catalog:",
    "pg": "catalog:",
    "rxjs": "7.8.1",
    "socket.io": "catalog:",
    "utility-types": "catalog:",
    "uuid": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@eslint/js": "catalog:",
    "@nestjs/cli": "11.0.16",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/testing": "11.1.12",
    "@stylistic/eslint-plugin": "catalog:",
    "@types/aws4": "1.11.6",
    "@types/bun": "catalog:",
    "@types/dockerode": "catalog:",
    "@types/express": "5.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/pg": "catalog:",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "drizzle-kit": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-eslint-comments": "catalog:",
    "eslint-plugin-import": "catalog:",
    "eslint-plugin-prettier": "catalog:",
    "eslint-plugin-promise": "catalog:",
    "eslint-plugin-simple-import-sort": "catalog:",
    "globals": "catalog:",
    "jiti": "catalog:",
    "openapi-typescript": "7.8.0",
    "prettier": "catalog:",
    "socket.io-client": "^4.8.1",
    "supertest": "7.0.0",
    "tsconfig-paths": "catalog:",
    "typescript-eslint": "catalog:"
  }
}
