{
  "$schema": "https://json.schemastore.org/tsconfig",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "downlevelIteration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "target": "es2020"
  },
  "include": [
    "test",
    "src/**/*.ts",
    "src/**/*.json",
    "script/*.ts",
    ".eslintrc.js",
    "jest.config.unit.ts",
    "jest.config.integration.ts",
    "jest.config.ts"
  ],
  "exclude": ["dist"]
}
